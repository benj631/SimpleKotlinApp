<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.simpleapp.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_submitFragment"
            app:destination="@id/submitFragment" />
    </fragment>

    <fragment
        android:id="@+id/submitFragment"
        android:name="com.example.simpleapp.SubmitFragment"
        android:label="@string/submit"
        tools:layout="@layout/fragment_submit" />

    <fragment
        android:id="@+id/notepadFragment"
        android:name="com.example.simpleapp.NotepadFragment"
        android:label="Notepad"
        tools:layout="@layout/fragment_notepad" />


</navigation>
